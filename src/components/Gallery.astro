---
import { Image } from 'astro:assets';
import img1 from '../assets/gallery/1.jpg';
import img2 from '../assets/gallery/2.jpg';
import img3 from '../assets/gallery/3.jpg';
import logoGray from '../assets/logo-gray.png';
---

<section class="gallery" id="gallery">
  <div class="gallery-background">
    <Image src={logoGray} alt="" class="bg-logo" />
  </div>
  <div class="container">
    <div class="gallery-grid">
      <div class="gallery-item">
        <div class="gallery-image-container">
          <Image 
            src={img1}
            alt="Exhibition Stand Design 1" 
            width="500" 
            height="375"
            loading="lazy"
            class="gallery-image"
          />
        </div>
        <div class="gallery-label">
          <span>COMPANY</span>
        </div>
      </div>
      <div class="gallery-item">
        <div class="gallery-image-container">
          <Image 
            src={img2}
            alt="Exhibition Stand Design 2" 
            width="500" 
            height="375"
            loading="lazy"
            class="gallery-image"
          />
        </div>
        <div class="gallery-label">
          <span>PROJECT</span>
        </div>
      </div>
      <div class="gallery-item">
        <div class="gallery-image-container">
          <Image 
            src={img3}
            alt="Exhibition Stand Design 3" 
            width="500" 
            height="375"
            loading="lazy"
            class="gallery-image"
          />
        </div>
        <div class="gallery-label">
          <span>CONTACT</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .gallery {
    padding: 6rem 0;
    background: var(--bg-dark);
    position: relative;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 3rem;
    position: relative;
    z-index: 2;
  }

  .gallery-item {
    position: relative;
    display: flex;
    border-radius: 10px;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .gallery-item:hover {
    transform: translateY(-5px);
  }

  .gallery-image-container {
    flex: 1;
  }

  .gallery-image {
    width: 100%;
    height: 300px;
    object-fit: cover;
  }

  .gallery-label {
    position: absolute;
    right: 0;
    top: 0;
    bottom: 0;
    width: 120px;
    background: rgba(0, 0, 0, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 5px;
  }

  .gallery-label span {
    color: var(--text-white);
    font-size: 1.2rem;
    font-weight: 600;
    letter-spacing: 2px;
    writing-mode: vertical-rl;
    text-orientation: mixed;
  }

  @media (max-width: 768px) {
    .gallery {
      padding: 4rem 0;
    }
    
    .gallery-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .gallery-item {
      flex-direction: column;
    }

    .gallery-label {
      position: relative;
      width: 100%;
      height: 60px;
      margin-right: 0;
    }

    .gallery-label span {
      writing-mode: horizontal-tb;
      text-orientation: mixed;
    }
  }
</style>