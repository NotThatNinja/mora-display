---
import { Image } from 'astro:assets';
import img1 from '../assets/gallery/1.jpg';
import img2 from '../assets/gallery/2.jpg';
import img3 from '../assets/gallery/3.jpg';
import logoGray from '../assets/logo-gray.png';
---

<section class="gallery" id="gallery">
  <div class="gallery-background">
    <Image src={logoGray} alt="" class="bg-logo" />
  </div>
  <div class="container">
    <div class="gallery-grid">
      <div class="gallery-item">
        <div class="gallery-image-container">
          <Image 
            src={img1}
            alt="Exhibition Stand Design 1" 
            width="400" 
            height="600"
            loading="lazy"
            class="gallery-image"
          />
        </div>
        <div class="gallery-label">
          <span>COMPANY</span>
        </div>
      </div>
      <div class="gallery-item">
        <div class="gallery-image-container">
          <Image 
            src={img2}
            alt="Exhibition Stand Design 2" 
            width="400" 
            height="600"
            loading="lazy"
            class="gallery-image"
          />
        </div>
        <div class="gallery-label">
          <span>PROJECT</span>
        </div>
      </div>
      <div class="gallery-item">
        <div class="gallery-image-container">
          <Image 
            src={img3}
            alt="Exhibition Stand Design 3" 
            width="400" 
            height="600"
            loading="lazy"
            class="gallery-image"
          />
        </div>
        <div class="gallery-label">
          <span>CONTACT</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .gallery {
    padding: 10rem 0;
    background: var(--bg-dark);
    position: relative;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    position: relative;
    z-index: 2;
  }

  .gallery-item {
    position: relative;
    display: flex;
    border-radius: 10px;
    overflow: hidden;
    transition: transform 0.3s ease;
    aspect-ratio: 3/4;
  }

  .gallery-item:hover {
    transform: translateY(-5px);
  }

  .gallery-image-container {
    flex: 1;
  }

  .gallery-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .gallery-label {
    position: absolute;
    right: 0;
    top: 0;
    bottom: 0;
    width: 80px;
    background: rgba(0, 0, 0, 0.4);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 8px;
    border-radius: 4px;
  }

  .gallery-label span {
    color: var(--text-white);
    font-size: 1.4rem;
    font-weight: 600;
    letter-spacing: 2px;
    writing-mode: vertical-rl;
    text-orientation: mixed;
  }

  @media (max-width: 1024px) {
    .gallery-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .gallery {
      padding: 6rem 0;
    }
    
    .gallery-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .gallery-item {
      aspect-ratio: 4/5;
    }

    .gallery-label {
      top: 0;
      bottom: 0;
      width: 70px;
    }

    .gallery-label span {
      font-size: 1.2rem;
    }

    .bg-logo-placeholder {
      display: none;
    }
  }

  @media (max-width: 500px) {
    .gallery-grid {
      grid-template-columns: 1fr;
    }
  }
</style>