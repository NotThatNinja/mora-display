---
import Header from '../components/Header.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="description" content="Professional exhibition stand design and build services" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link rel="icon" href="/mora-display/logo.png" type="image/png" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  <title>{title}</title>
</head>
<body>
  <Header />
  <main>
    <slot />
  </main>
</body>
</html>

<style is:global>
  :root {
    --primary-orange: #ff6b35;
    --text-white: #ffffff;
    --text-gray: #cccccc;
    --bg-dark: #000000;
    --bg-darker: #000000;
    --accent-gold: #d4af37;
    --logo-gray: #333333;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: 'Inter', sans-serif;
    scroll-behavior: smooth;
    scroll-padding-top: 60px;
  }

  body {
    background: var(--bg-darker);
    color: var(--text-white);
    line-height: 1.6;
    overflow-x: hidden;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  @media (max-width: 768px) {
    .container {
      padding: 0 15px;
    }
  }

  html {
    scroll-behavior: smooth;
  }

  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: var(--bg-darker);
  }

  ::-webkit-scrollbar-thumb {
    background: var(--primary-orange);
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #e55a2b;
  }

  /* Focus styles for accessibility */
  *:focus {
    outline: 2px solid var(--primary-orange);
    outline-offset: 2px;
  }

  /* Animation utilities */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .fade-in-up {
    animation: fadeInUp 0.6s ease-out;
  }

  /* Responsive images */
  img {
    max-width: 100%;
    height: auto;
  }

  /* Button hover effects */
  .btn {
    transition: all 0.3s ease;
  }

  .btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(255, 107, 53, 0.3);
  }

  /* Section with vertical header layout */
  .section-with-vertical-header {
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: 4rem;
    align-items: start;
    min-height: 65vh;
  }

  .vertical-header {
    display: flex;
    align-items: flex-start;
    gap: 2rem;
    height: 100%;
    position: sticky;
    top: 120px;
  }

  .vertical-title {
    writing-mode: vertical-rl;
    text-orientation: mixed;
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text-white);
    letter-spacing: 2px;
    transform: rotate(180deg);
  }

  .vertical-line {
    width: 2px;
    height: 65vh;
    background: var(--text-white);
    position: relative;
  }

  @media (max-width: 768px) {
    .section-with-vertical-header {
      grid-template-columns: 1fr;
      gap: 2rem;
      min-height: auto;
    }

    .vertical-header {
      flex-direction: row;
      justify-content: flex-start;
      position: static;
      height: auto;
    }

    .vertical-title {
      writing-mode: horizontal-tb;
      text-orientation: mixed;
      font-size: 2rem;
      transform: none;
    }

    .vertical-line {
      display: none;
    }
  }

  /* Background logo utility */
  .bg-logo {
    position: absolute;
    right: 10%;
    top: 50%;
    transform: translateY(-50%);
    opacity: 0.2;
    z-index: 1;
    pointer-events: none;
    width: 300px;
    height: auto;
  }

  @media (max-width: 768px) {
    .bg-logo {
      display: none;
    }
  }
</style>